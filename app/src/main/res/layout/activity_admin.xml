<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AdminFiles.AdminActivity">


    <Button
        android:id="@+id/addPandits"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/white"
        android:elevation="15dp"
        android:onClick="onClick"
        android:text="Add Pandits"
        android:textAlignment="center"
        android:textColor="@color/mainBackground"
        android:textSize="18sp" />

    <Button
        android:id="@+id/addKundliPandit"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/white"
        android:elevation="15dp"
        android:onClick="onClick"
        android:text="Add Kundli Pandit"
        android:textAlignment="center"
        android:textColor="@color/mainBackground"
        android:textSize="18sp" />

    <Button
        android:id="@+id/viewPandit"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/white"
        android:elevation="15dp"
        android:onClick="onClick"
        android:text="View Pandit"
        android:textAlignment="center"
        android:textColor="@color/mainBackground"
        android:textSize="18sp" />

    <Button
        android:id="@+id/addSponsorImageBtn"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/white"
        android:elevation="15dp"
        android:onClick="onClick"
        android:text="Add Sponsor Images"
        android:textAlignment="center"
        android:textColor="@color/mainBackground"
        android:textSize="18sp" />
</LinearLayout>